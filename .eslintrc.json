{
  "root": true,
	"env": {
		"jquery": true,
		"node": true,
		"jest": true,
    "browser": true
	},
	"plugins": [
		"jest",
    "promise",
    "@typescript-eslint"
	],
	"extends": [
    "plugin:@typescript-eslint/recommended",
		"standard",
		"eslint:recommended"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 11
	},
  "parser": "@typescript-eslint/parser",
	"rules": {
		"semi": "error",
		"indent": [
			"error",
			2
		],
		"prefer-const": [
			"error",
			{
				"ignoreReadBeforeAssign": true
			}
		],
		"space-before-function-paren": "off",
		"no-var": "error",
    "no-console": [
      "error",
      {
        "allow": [
          "error",
          "warn"
        ]
      }
    ],
		"no-unused-expressions": 0
	}
}