{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"jquery": true,
		"node": true,
		"jest": true
	},
	"plugins": [
		"jquery",
		"chai-friendly",
		"jest"
	],
	"extends": [
		"standard",
		"eslint:recommended"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 11
	},
	"rules": {
		"semi": "error",
		"indent": [
			"error",
			2
		],
		"prefer-const": [
			"error",
			{
				"ignoreReadBeforeAssign": true
			}
		],
		"space-before-function-paren": "off",
		"no-var": "error",
		"no-console": "off",
		"no-unused-expressions": 0,
		"chai-friendly/no-unused-expressions": 2
	}
}